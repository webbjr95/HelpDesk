@model IEnumerable<HelpDeskCodingExercise.Models.TicketModels>

@{
    ViewBag.Title = "All Tickets";
}

<h1 style="font-size:26px; font-weight:800;">All Tickets</h1>

<hr>

<span>
    <button class="btn btn-default">
        @Html.ActionLink("Create Ticket", "Create")
    </button>
</span>

<br></br>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Id", "AllTickets", new { sortOrder = ViewBag.IdSortParm })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.ActionLink("Severity", "AllTickets", new { sortOrder = ViewBag.SeveritySortParm })
        </th>
        <th>
            @Html.ActionLink("Date Created", "AllTickets", new { sortOrder = ViewBag.DateSortParm })
        </th>
        <th>
            @Html.ActionLink("Assignee", "AllTickets", new { sortOrder = ViewBag.AssigneeSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Severity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Assignee)
            </td>
            <td>
                <button class="btn btn-default">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </button>
            </td>
        </tr>
    }

</table>